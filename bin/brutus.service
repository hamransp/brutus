[Unit]
Description=Brutus Bitcoin Key Scanner
After=network-online.target
Wants=network-online.target
StartLimitIntervalSec=0

[Service]
Type=simple
User=root
WorkingDirectory=/path/to/brutus/directory
ExecStart=/path/to/brutus/directory/wrapper.sh
Restart=always
RestartSec=3
KillSignal=SIGTERM
TimeoutStopSec=20

[Install]
WantedBy=multi-user.target